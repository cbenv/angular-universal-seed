{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular-universal-seed"
  },
  "apps": [
    {
      "name": "ngClient",
      "root": "src/client",
      "outDir": "dist/client",
      "assets": [
        "assets"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "assets/sass/main.scss",
        "assets/sass/material.scss"
      ],
      "scripts": []
    },
    {
      "name": "ngServer",
      "platform": "server",
      "root": "src/client",
      "outDir": "dist/server",
      "assets": [],
      "index": "index.html",
      "main": "main.server.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.server.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [],
      "scripts": []
    }
  ],
  "e2e": {
    "protractor": {
      "config": "src/e2e/protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/client/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/client/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "src/client/karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
